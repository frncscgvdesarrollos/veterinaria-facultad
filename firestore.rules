rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Un usuario solo puede leer y actualizar su propio perfil.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Cualquiera autenticado puede crear un perfil de usuario (al registrarse).
      allow create: if request.auth != null;

      // Reglas para la subcolección de mascotas
      match /mascotas/{mascotaId} {
        // El dueño puede gestionar la información de su mascota.
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // --- ¡REGLA CLAVE AÑADIDA! ---
        // Permite al dueño de la mascota gestionar su carnet sanitario.
        match /carnetSanitario/{registroId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

       // Permite a un usuario gestionar sus propios turnos.
      match /turnos/{turnoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}